<Window x:Class="Ekzamen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ekzamen"
        mc:Ignorable="d"
        Title="Уютный Дом" Height="420" Width="420">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Расчёт стоимости жалюзи"
                   FontSize="18"
                   FontWeight="Bold"
                   VerticalAlignment="Center"/>
        
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Ширина:"
                   VerticalAlignment="Center"/>
        <!-- Поле ввода ширины изделия -->
        <TextBox Grid.Row="1" Grid.Column="1"
                 x:Name="WidthBox"/>

        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Высота:"
                   VerticalAlignment="Center"/>
        <!-- Поле ввода высоты изделия -->
        <TextBox Grid.Row="2" Grid.Column="1"
                 x:Name="HeightBox"/>

        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Материал:"
                   VerticalAlignment="Center"/>
        <!-- Выбор материала из выпадающего списка -->
        <ComboBox Grid.Row="3" Grid.Column="1"
                  x:Name="MaterialBox">
            <ComboBoxItem Content="Алюминий"/>
            <ComboBoxItem Content="Пластик"/>
        </ComboBox>

        <Grid Grid.Row="4" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- Кнопка рассчета -->
            <Button Grid.Column="0"
                    Content="Рассчитать"
                    Margin="0,5"
                    Click="Calculate_Click"/>
            <!-- Кнопка формирования квитанции -->
            <Button Grid.Column="1"
                    Content="Оформить квитанцию"
                    Margin="5,5,0,5"
                    Click="Receipt_Click"/>
        </Grid>

        <TextBlock Grid.Row="5"
                   Grid.ColumnSpan="2"
                   x:Name="ResultText"
                   FontSize="14"
                   TextWrapping="Wrap"
                   Margin="0,10"/>
    </Grid>
</Window>
